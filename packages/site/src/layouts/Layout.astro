---
import Header from '$ui/Header.astro';
import '../styles/style.css';

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <link rel='me' href='https://mastodon.social/@StochasticEntropy' />
    <meta name='generator' content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <slot />
  </body>

  <script async src='//static.getclicky.com/101402344.js'></script>
  <noscript
    ><p>
      <img
        alt='Clicky'
        width='1'
        height='1'
        src='//in.getclicky.com/101402344ns.gif'
      />
    </p></noscript
  >
</html>
