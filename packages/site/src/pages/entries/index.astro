---
import PostListing from '$ui/PostListing.astro';
import Layout from '../../layouts/Layout.astro';

const entries = await Astro.glob('../../entries/*.json');
const sortedEntries = entries
  .map((e) => e.default)
  .sort((a, b) => (a.created > b.created ? -1 : 1));
---

<Layout
  title='The Stochastic Parrot | Feeds on universal entropy to bring you random noise'
>
  <main>
    <PostListing items={sortedEntries}><h2>All Posts</h2></PostListing>
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1.5rem;
    max-width: 180ch;
  }

  .instructions {
    margin: 1.5rem auto;
    max-width: 120ch;
  }
</style>
